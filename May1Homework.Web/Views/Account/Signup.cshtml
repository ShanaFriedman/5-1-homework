<div class="col-md-6 offset-md-3 bg-light p-4 rounded shadow">
    <h3>Sign up for a new account</h3>
    <form method="post" action="/account/signup">
        <input type="text" name="name" placeholder="Name" class="form-control" />
        <br />
        <input type="text" name="email" placeholder="Email" class="form-control" />
        <br />
        <input type="password" name="password" placeholder="Password" class="form-control password" />
        <br />
        <div class="form-check">
            <input type="checkbox" class="form-check-input show-password" id="show-password" value="true">
            <label class="form-check-label" for="show-password">Show Password</label>
        </div>
        <button class="btn btn-primary">Signup</button>
    </form>
</div>

@section scripts{
    <script src="~/js/login-signup.js"></script>
}
