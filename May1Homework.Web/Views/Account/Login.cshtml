@model string

<div class="col-md-6 offset-md-3 bg-light p-4 rounded shadow">
    <h3>Log in to your account</h3>
    @if (!string.IsNullOrEmpty(Model))
    {
        <span class="text-danger">@Model</span>
    }
    <form method="post" action="/account/login">
        <input type="hidden" name="returnurl" />
        <input type="text" name="email" placeholder="Email" class="form-control" />
        <br />
        <input type="password" name="password" placeholder="Password" class="form-control password" />
        <br />
        <div class="form-check">
            <input type="checkbox" class="form-check-input show-password" id="show-password" value="true">
            <label class="form-check-label" for="show-password">Show Password</label>
        </div>
        <button class="btn btn-primary">Login</button>
    </form>
    <a href="/account/signup">Sign up for a new account</a>
</div>

@section scripts{
    <script src="~/js/login-signup.js"></script>
}
